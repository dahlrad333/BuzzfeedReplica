@model Buzzfeedsession4.Models.Question

@{
    ViewBag.Title = "Add Answers";
}

<h2>@Model.question</h2>


@foreach (var answer in Model.answers)
{
    <li> @answer.answer - @answer.value</li>
}


<form action="/Make/ConfirmAnswer" method="POST">
    New Answer: <input type="text" name="answer" /> <br />
    Answer Value: <input type="number" name="value" /> <br />
    <input type="hidden" name="question_id" value="@Model.id" /> <br />
    <button type="submit">Add Answer!</button>

</form>

@Html.ActionLink("Back to Questions", "Quiz ", "Make", new { id = Model.quiz.id }, new{@class = "btn btn-primary")